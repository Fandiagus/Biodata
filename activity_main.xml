<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgbg"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/imgpp"
        android:layout_width="110dp"
        android:layout_height="170dp"
        android:layout_below="@+id/imgbg"
        android:src="@drawable/profil"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fandi Agus Kuncoro"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imgpp"
        android:layout_below="@+id/imgbg"
        android:layout_marginTop="10dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mahasiswa"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/imgpp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bekasi-Yogyakarta"
        android:layout_below="@id/position"
        android:layout_toRightOf="@+id/imgpp"
        android:textSize="17dp"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobi : "
        android:layout_below="@+id/birth"
        android:layout_toRightOf="@id/imgpp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Futsal"
        android:layout_below="@id/birth"
        android:layout_toRightOf="@id/weight"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badminton"
        android:layout_below="@id/height"
        android:layout_toRightOf="@id/weight"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@id/imgpp"
        android:text="Fandi Agus Kuncoro Adalah Mahasiswa UPN Veteran Yogyakarta. Dia Lahir pada tanggal 27 Agustus 1999 di Bekasi, Jawa Barat. Dia anak ke-2 dari 2 bersaudara. Saat ini dia sedang menempuh karir untuk menjadi seorang programmer. "
        />

    <TextView
        android:id="@+id/po"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIODATA"
        android:layout_below="@id/imgpp"
        android:padding="3dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/imgpp"/>

    <View
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="0.5dp"
        android:background="@android:color/black"
        android:layout_below="@+id/po"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fandiagus.kun"
        android:layout_above="@id/imgpp"
        android:layout_margin="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

</RelativeLayout>